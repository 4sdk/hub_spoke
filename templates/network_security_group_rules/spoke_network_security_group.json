{
  "rules": [
    {
      "name": "AllowInboundSSH",
      "priority": 200,
      "direction": "Inbound",
      "access": "Allow",
      "protocol": "TCP",
      "source_port_range": "*",
      "destination_port_ranges": ["22"],
      "source_address_prefix": "${vpn_client_address_space}",
      "destination_address_prefix": "${spoke_subnet_address_space}"
    },
    {
      "name": "DenyInbound",
      "priority": 300,
      "direction": "Inbound",
      "access": "Deny",
      "protocol": "*",
      "source_port_range": "*",
      "destination_port_range": "*",
      "source_address_prefix": "*",
      "destination_address_prefix": "*"
    }
  ]
}